<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.PresetPatternFromTab"
             Title="Patterns">
  <StackLayout>
        <ListView x:Name="PatternList" RowHeight="60" VerticalOptions="FillAndExpand" HorizontalOptions="StartAndExpand" >

            




            <ListView.ItemTemplate>
                <DataTemplate>

                    <ViewCell>
                        <Grid HeightRequest="333" BackgroundColor="Black">
                            <Image Source="{Binding BackgroundImageSrc}" Aspect="AspectFill"/>
                            <Label TextColor="White" Text="{Binding Name}"></Label>
                        </Grid>

                        <!--<Button BackgroundColor="White"  BorderWidth="4" BorderColor="Black" TextColor="Black" Text="{Binding Name}"></Button>-->

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView >
    </StackLayout>
</ContentPage>