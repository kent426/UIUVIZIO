<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.MenuP.MasterPage"
             Title="Master" 
             BackgroundColor="Black"
             BackgroundImage="menu_bg.png">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" >
        <ListView x:Name="listView" VerticalOptions="FillAndExpand" RowHeight="100"  HorizontalOptions="CenterAndExpand"  SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Title}" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"></Label>
                        </ViewCell>

                        <!--<TextCell Text="{Binding Title}" Height="200" TextColor="White" />-->


                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
        
    </ContentPage.Content>
</ContentPage>